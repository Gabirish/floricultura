<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Floricultura Valença", "Index", "Vendas", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Vendas")</li>
                    <li class="dropdown">
                        @Html.ActionLink("Produtos", "Index", "Produtos", null , new { @class = "dropbtn" })
                        <div class="dropdown-content">
                            @Html.ActionLink("Novo Produto", "Create", "Produtos")
                        </div>
                    </li>

                    <li class="dropdown">
                        @Html.ActionLink("Clientes", "Index", "Clientes", null , new { @class = "dropbtn" })
                        <div class="dropdown-content">
                            @Html.ActionLink("Novo Cliente", "Create", "Clientes")
                        </div>
                    </li>

                    <li class="dropdown">
                        @Html.ActionLink("Funcionários", "Index", "Funcionarios", null , new { @class = "dropbtn" })
                        <div class="dropdown-content">
                            @Html.ActionLink("Novo Funcionário", "Create", "Funcionarios")
                        </div>
                    </li>


                    
                    <li>@Html.ActionLink("Sair", "Logout", "Login")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/Customizados/decimalValidator.js"></script>
    <script src="~/Scripts/Customizados/MascarasDosFormularios.js"></script>

</body>
</html>
